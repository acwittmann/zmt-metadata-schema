{  
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://https://gitlab.leibniz-zmt.de/digiz/database/zmt-metadata-schema/v1/staff.schema.json",
    "title": "Staff",
    "description": "scientists associated with data or metadata",
    "type": "object",
    "properties": {
        "first_name": { "type": "string" },
        "last_name":  { "type": "string" },
        "phone":      { "type": "string" },
        "email":      { "type": "string" },
        "url":        { "type": "string" },
        "orcid": {
            "type": "string",
            "description": "ORCID identifier as 16-digit number, e.g. 0000-0001-6233-1866"
        }
    },
    "required": ["last_name"]
}
 